@using Return.Models
@model List<ClassAssignment>


@{
    ViewBag.Title = "ViewAssignment";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid table-responsive">
    <h2>Assignments</h2>

    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Assigned On</th>
                <th>Assigned By</th>
                <th>File</th>
                <th>Instructions</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.DateTime</td>
                    <td>@item.TeacherId</td>
                    <td>@item.FilePath</td>
                    <td>@item.Text</td>
                    <td class="text-center action-btn-div">
                        @*<a class="btn btn-primary btn-sm" href="/Admin/EditLecture/@subjectListSubjectViewModel.SectionId"><span class="glyphicon glyphicon-edit"></span> Edit</a>*@
                        <a class="btn btn-danger btn-sm" href="/Admin/DeleteAssignment/@item.SectionId"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>









