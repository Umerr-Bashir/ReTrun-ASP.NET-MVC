@using Return.Models

@{
    ViewBag.Title = "AddToSection";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    List<Class> classes = ViewBag.Class as List<Class>;
}



<h2>Add Sections</h2>

<div class="container">
    <div class="col-lg-6 col-lg-push-3">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-h">Add Section</h3>
            </div>
            <div class="panel-body">
                
                <form class="form-horizontal" action="/Admin/AddToSection" method="post" style="margin-top:50px">

                    <div class="form-group">
                        <label class="control-label col-sm-3" for="class">Class:</label>
                        <div class="col-sm-9">
                            <select name="ClassId" class="form-control">
                                @foreach (var item in classes)
                                {
                                    <option value="@item.Id"> @item.Name </option>

                                }

                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="section">Section Name:</label>
                        <div class="col-sm-9"> <input type="text" class="form-control" id="section" placeholder="Section Name:" required name="Name"></div>
                    </div>
                    
                    <div class="form-group">
                        <div class="col-sm-offset-5 col-sm-10 ">
                            <button type="submit" class="btn btn-info">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>



