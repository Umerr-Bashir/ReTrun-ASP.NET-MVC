@using Return.ViewModels
@model List<TeacherInchargeViewModel>
@{
    ViewBag.Title = "ManageTeachers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid table-responsive">
    <div>
        <h2>Manage Teachers</h2>
        @*<a href="/Admin/AddTeacher" class="btn btn-info add-btn">Add Teacher</a>*@
    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Teacher</th>
                <th>Class Incharge</th>
                <th>Address</th>
                <th>CNIC Number</th>    
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var teacherInchargeViewModel in Model)
            {
                <tr>
                    <td>@teacherInchargeViewModel.TeacherId</td>
                    <td>@teacherInchargeViewModel.FirstName @teacherInchargeViewModel.LastName</td>
                    <td>@teacherInchargeViewModel.Class - @teacherInchargeViewModel.Section</td>
                    <td>@teacherInchargeViewModel.Address</td>
                    <td>@teacherInchargeViewModel.CNICNumber</td>
                    <td class="text-center action-btn-div">
                        <a class="btn btn-info btn-sm" href="/Admin/View/@teacherInchargeViewModel.TeacherId"><spna class="glyphicon glyphicon-user"></spna> View</a>
                        <a class="btn btn-primary btn-sm" href="/Admin/Edit/@teacherInchargeViewModel.TeacherId"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Admin/DeleteTeacher/@teacherInchargeViewModel.TeacherId"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>











