@using Return.Models
@model User
@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>View User</h2>
<div class="container">
    <div class="col-lg-6 col-lg-push-3">
        <div class="panel panel-info">
            <div class="panel-heading">User Data</div>
            <div class="panel-body">
                <form class="form-horizontal" action="/Admin/View">
                    <input type="hidden" class="form-control" disabled value="@Model.Id">
                    <div class="form-group text-center">
                        <img class="img-responsive img-thumbnail" src="~/Images/user.png" height="140" width="140" />
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="fname">First Name:</label>
                        <div class="col-sm-9"> <input type="text" class="form-control cursor-none" id="fname" placeholder="First Name" disabled required name="FirstName" value="@Model.FirstName"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="lname">Last Name:</label>
                        <div class="col-sm-9"><input type="text" class="form-control cursor-none" id="lname" placeholder="Last Name" disabled required name="LastName" value="@Model.LastName"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="email">Email:</label>
                        <div class="col-sm-9"><input type="email" class="form-control cursor-none" id="email" placeholder="Email" disabled required name="LastName" value="@Model.Email"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="pass">Password:</label>
                        <div class="col-sm-9"><input type="password" class="form-control cursor-none" id="pass" placeholder="Password" disabled required name="Password" value="@Model.Password"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="cnic">CNIC Number:</label>
                        <div class="col-sm-9"><input type="text" class="form-control cursor-none" id="cnic" placeholder="CNIC.." disabled required name="CNICNumber" value="@Model.CNICNumber"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="addrs">Addres:</label>
                        <div class="col-sm-9"><input type="text" class="form-control cursor-none" id="addrs" placeholder="Address" disabled required name="Address" value="@Model.Address"></div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3" for="role">Role:</label>
                        <div class="col-sm-9"><input type="text" class="form-control cursor-none" id="role" placeholder="Role" disabled required name="Role" value="@Model.Role.Name"></div>
                    </div>

                    <div class="text-center">
                        <a class="btn btn-info " href="/Admin/Dashboard">Back</a>
                        <a class="btn btn-danger" href="/Admin/Edit/@Model.Id">Edit</a>





                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

