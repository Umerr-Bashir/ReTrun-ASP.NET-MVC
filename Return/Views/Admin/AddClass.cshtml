@using Return.Models
@model List<Class>

@{
    ViewBag.Title = "AddClass";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h2>Add Class</h2>

<div class="container">
    <div class="col-lg-4 col-lg-push-4">
        <div class="panel panel-info">
            <div class="panel-heading">
                <h3 class="panel-h">Add Class</h3>
            </div>
            <div class="panel-body">
                <form class="form-horizontal" action="/Admin/AddClass" method="post">
                    <div class="text-center">
                        <ul>
                            @foreach (var item in Model)
                            {
                                <li class="sections-li">@item.Name<a href="/Admin/DeleteClass/@item.Id">delete</a></li>

                            }
                        </ul>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="class">Class :</label>
                        <div class="col-sm-9"> <input type="number" class="form-control" id="class" placeholder="Class" required name="Name"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10 ">
                            <button type="submit" class="btn btn-info">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>



