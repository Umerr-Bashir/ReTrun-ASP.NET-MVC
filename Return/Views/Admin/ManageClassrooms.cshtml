
@using Return.ViewModels
@model List<ClassInchargeViewModel>

@{
    ViewBag.Title = "ManageClassrooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}


<div class="container-fluid table-responsive">
    <div>
        <h2>Class Rooms</h2>
        <div>
            <a href="/Admin/AssignClassIncharge" class="btn btn-success add-btn">Assign Class Incharge</a>
            <a href="/Admin/AddClass" class="btn btn-warning add-btn">Add Class</a>
            <a href="/Admin/AddToSection" class="btn btn-info add-btn">Add To Section</a>
            
        </div>


    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Class</th>
                <th>Section</th>
                <th>Class Incharge</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ClassInchargeViewModel in Model)
            {
                <tr>
                    <td>@ClassInchargeViewModel.ClassName</td>
                    <td>@ClassInchargeViewModel.SectionName</td>
                    <td>@ClassInchargeViewModel.FirstName @ClassInchargeViewModel.LastName</td>

                    <td class="text-center action-btn-div">
                        <a class="btn btn-success btn-sm" href="/Admin/ViewLectures/@ClassInchargeViewModel.SectionId"><spna class="glyphicon glyphicon-calendar"></spna> View Lectures</a>
                        <a class="btn btn-info btn-sm" href="/Admin/ViewClassroom/@ClassInchargeViewModel.SectionId"><spna class="glyphicon glyphicon-user"></spna> View Students</a>
                        <a class="btn btn-primary btn-sm" href="/Admin/EditClassroom/@ClassInchargeViewModel.SectionId"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Admin/DeleteClassroom/@ClassInchargeViewModel.SectionId"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>






