
@using Return.Models
@model List<Section>

@{
    ViewBag.Title = "ManageClassrooms";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="container-fluid table-responsive">
    <div>
        <h2>Class Rooms</h2>
        <div>
            <a href="/Admin/AddClass" class="btn btn-success add-btn">Add Class</a>
            <a href="/Admin/AddToSection" class="btn btn-info add-btn">Add To Section</a>
            
        </div>


    </div>
    <table class="table table-bordered table-striped table-hover">
        <thead>
            <tr>
                <th>Class</th>
                <th>Section</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Class.Name</td>
                    <td>@item.Name</td>
                    <td class="text-center action-btn-div">
                        <a class="btn btn-info btn-sm" href="/Admin/ViewClassroom/@item.Id"><spna class="glyphicon glyphicon-user"></spna> View</a>
                        <a class="btn btn-primary btn-sm" href="/Admin/EditClassroom/@item.Id"><span class="glyphicon glyphicon-edit"></span> Edit</a>
                        <a class="btn btn-danger btn-sm" href="/Admin/DeleteClassroom/@item.Id"><span class="glyphicon glyphicon-trash"></span> Delete</a>
                    </td>
                </tr>
            }

        </tbody>
    </table>

</div>






